{
  "name": "cloudflare-registry",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251202.0",
    "@hono/node-server": "^1.19.6",
    "hono": "^4.10.7",
    "wrangler": "^4.52.1"
  },
  "scripts": {
    "dev": "wrangler dev",
    "dev:debug": "wrangler dev --log-level debug",
    "dev:bun": "bunx --bun wrangler dev",
    "deploy": "wrangler deploy",
    "start:local": "bun run src/local.ts",
    "test": "bun test",
    "build:frontend": "cd frontend && bun install && bun run build && cd .. && bun run scripts/embed-frontend.ts",
    "build": "bun run build:frontend",
    "predeploy": "bun run build:frontend",
    "db:create": "wrangler d1 create registry-db",
    "db:migrate": "wrangler d1 migrations apply registry-db",
    "db:migrate:local": "wrangler d1 migrations apply registry-db --local",
    "db:list": "wrangler d1 list",
    "db:query": "wrangler d1 execute registry-db --command"
  }
}